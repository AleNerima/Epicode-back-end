@{
    ViewData["Title"] = "Prenotazione";
    var sale = ViewBag.Sale as List<CinemaMultisala.Models.Sala>;
}

<h2 class="text-center text-danger">Prenotazione</h2>

<form asp-action="Prenota" method="post" class="mt-5">
    <div class="text-center mt-2">
        <label>Nome:</label>
        <input type="text" name="nome" required />
    </div>
    <div class="text-center mt-2">
        <label>Cognome:</label>
        <input type="text" name="cognome" required />
    </div>
    <div class="text-center mt-2">
        <label>Sala:</label>
        <select name="sala" required>
            @foreach (var sala in sale)
            {
                <option value="@sala.Nome">@sala.Nome</option>
            }
        </select>
    </div>
    <div class="text-center mt-2">
        <label>Ridotto:</label>
        <input type="checkbox" name="ridotto" />
    </div>
    <div class="text-center">
    <button type="submit" class="btn btn-primary mt-3">Prenota</button>
    </div>

</form>
